<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Added the entity WorkInProgressTransfer.
    -->
    <changeSet id="20220418094424-1" author="jhipster">
        <createTable tableName="work_in_progress_transfer">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="target_asset_number" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <changeSet id="20220418094424-1-relations" author="jhipster">

        <createTable tableName="rel_work_in_progress_transfer__work_in_progress_registration">
            <column name="work_in_progress_registration_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="work_in_progress_transfer_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="work_in_progress_transfer_id, work_in_progress_registration_id" tableName="rel_work_in_progress_transfer__work_in_progress_registration"/>

        <createTable tableName="rel_work_in_progress_transfer__placeholder">
            <column name="placeholder_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="work_in_progress_transfer_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="work_in_progress_transfer_id, placeholder_id" tableName="rel_work_in_progress_transfer__placeholder"/>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->

    <!--
        Load sample data generated with Faker.js
        - This data can be easily edited using a CSV editor (or even MS Excel) and
          is located in the 'src/main/resources/config/liquibase/fake-data' directory
        - By default this data is applied when running with the JHipster 'dev' profile.
          This can be customized by adding or removing 'faker' in the 'spring.liquibase.contexts'
          Spring Boot configuration key.
    -->
    <changeSet id="20220418094424-1-data" author="jhipster" context="faker">
        <loadData
                  file="config/liquibase/fake-data/work_in_progress_transfer.csv"
                  separator=";"
                  tableName="work_in_progress_transfer"
                  usePreparedStatements="true">
            <column name="id" type="numeric"/>
            <column name="description" type="string"/>
            <column name="target_asset_number" type="string"/>
            <!-- jhipster-needle-liquibase-add-loadcolumn - JHipster (and/or extensions) can add load columns here -->
        </loadData>
    </changeSet>
</databaseChangeLog>
