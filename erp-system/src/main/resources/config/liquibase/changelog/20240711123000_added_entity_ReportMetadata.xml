<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd"
>
    <changeSet id="20240711123000-1" author="jhipster">
        <createTable tableName="report_metadata">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="report_title" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="report_description" type="varchar(2000)"/>
            <column name="module_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="page_path" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="backend_api" type="varchar(512)">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="display_lease_period" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="display_lease_contract" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="lease_period_query_param" type="varchar(255)"/>
            <column name="lease_contract_query_param" type="varchar(255)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
